<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Community Markets</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">
    <!-- Include SweetAlert2 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    <!-- Include SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Playball&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/Content/Templete/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/Content/Templete/lib/lightbox/css/lightbox.min.css" rel="stylesheet">
    <link href="~/Content/Templete/lib/owlcarousel/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/Content/Templete/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/Content/Templete/css/style.css" rel="stylesheet">
</head>

<body>

    <!-- Spinner Start -->
    <div id="spinner" class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50  d-flex align-items-center justify-content-center">
        <div class="spinner-grow text-primary" role="status"></div>
    </div>
    <!-- Spinner End -->
    <!-- Navbar start -->
    <div class="container-fluid nav-bar">
        <div class="container">
            <nav class="navbar navbar-light navbar-expand-lg py-4">
                <a href="/Home/Index" class="navbar-brand">
                    <h4 style="color: blue;">COMMUNITY MARKETS @*<span class="text-dark">Book</span>*@ </h4>
                </a>
                <button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="fa fa-bars text-primary"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav mx-auto">

                        @if (Request.IsAuthenticated)
                        {
                            if (User.IsInRole("Admin"))
                            {
                                <div class="nav-item dropdown">
                                    <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" style="color: blue;">Products</a>
                                    <div class="dropdown-menu bg-light">
                                        <a href="/Products/Create" class="dropdown-item" style="color: blue;">Add Item</a>
                                        <a href="/Products/Index" class="dropdown-item" style="color: blue;">Product List</a>
                                    </div>
                                </div>

                                <a href="/Products/HiredList" class="nav-item nav-link" style="color: blue;">Ordered List</a>

                                <div class="nav-item dropdown">
                                    <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" style="color: blue;">Market Management</a>
                                    <div class="dropdown-menu bg-light">
                                        <a href="/Drivers/Create" class="dropdown-item" style="color: blue;">Create Driver</a>
                                        <a href="/Drivers/Index" class="dropdown-item" style="color: blue;">Drivers List</a>
                                        <a href="/DeliveryVans/Create" class="dropdown-item" style="color: blue;">Create Delivery Van</a>
                                        <a href="/DeliveryVans/Index" class="dropdown-item" style="color: blue;">List Of Delivery Van</a>
                                    </div>
                                </div>

                                @Html.Partial("_LoginPartial")
                            }
                            else if (User.IsInRole("Driver"))
                            {
                                <div class="nav-item dropdown">
                                    <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" style="color: blue;">Deliveries</a>
                                    <div class="dropdown-menu bg-light">
                                        <a href="/Drivers/DeliveryList" class="dropdown-item" style="color: blue;">My Deliveries</a>
                                    </div>
                                </div>
                                @Html.Partial("_LoginPartial")
                            }
                            else
                            {
                                <a href="/Home/Index" class="nav-item nav-link" style="color: blue;">Home</a>
                                <a href="/Home/About" class="nav-item nav-link" style="color: blue;">About</a>
                                <a href="/Home/Contact" class="nav-item nav-link" style="color: blue;">Contact</a>
                                <a href="/Products/Index" class="nav-item nav-link" style="color: blue;">Order Now</a>

                                <div class="nav-item dropdown">
                                    <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" style="color: blue;">Orders</a>
                                    <div class="dropdown-menu bg-light">
                                        <a href="/Products/Orders" class="dropdown-item" style="color: blue;">My Orders</a>
                                    </div>
                                </div>

                                @Html.Partial("_LoginPartial")
                            }
                        }
                        else
                        {
                            <a href="/Home/Index" class="nav-item nav-link" style="color: blue;">Home</a>
                            <a href="/Home/About" class="nav-item nav-link" style="color: blue;">About</a>
                            <a href="/Home/Contact" class="nav-item nav-link" style="color: blue;">Contact</a>
                            @Html.Partial("_LoginPartial")
                        }

                    </div>
                </div>
            </nav>
        </div>
    </div>
    <div class="container">
        @RenderBody()
    </div>
    <!-- Footer Start -->
    <div class="container-fluid footer py-6 my-6 mb-0 wow bounceInUp" data-wow-delay="0.1s" style="background-color: black; color: white;">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6">
                    <div class="footer-item">
                        <h4 style="color: blue;">Community Markerts</h4>
                        <p class="lh-lg mb-4">
                            Welcome to Community markets where we make sure we meet the requirements of the customer.
                        </p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="footer-item">
                        <h4 class="mb-4" style="color: blue;">Special Facilities</h4>
                        <div class="d-flex flex-column align-items-start">
                            <a class="text-body mb-3" href="" style="color: white;"><i class=" text-primary me-2"></i>Convinience Services</a>
                            <a class="text-body mb-3" href="" style="color: white;"><i class=" text-primary me-2"></i>Product Demonstrations</a>
                            <a class="text-body mb-3" href="" style="color: white;"><i class=" text-primary me-2"></i>Customer Service Desks</a>
                            <a class="text-body mb-3" href="" style="color: white;"><i class=" text-primary me-2"></i>In-Store Promotions</a>
                            <a class="text-body mb-3" href="" style="color: white;"><i class=" text-primary me-2"></i>Loyalty Programs </a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="footer-item">
                        <h4 class="mb-4" style="color: blue;">Contact Us</h4>
                        <div class="d-flex flex-column align-items-start">
                            <p><i class="fa fa-map-marker-alt me-2" style="color: blue;"></i>Petermaritburg</p>
                            <p><i class="fa fa-phone-alt me-2" style="color: blue;"></i> (+27)631 271 588</p>
                            <p><i class="fas fa-envelope me-2" style="color: blue;"></i> communitymarkets@gmail.com</p>
                            <p><i class="fa fa-clock me-2" style="color: blue;"></i> 08h00 - 18h00 Hours Service</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-md-square btn-primary rounded-circle back-to-top" style="background-color: black; color: blue;"><i class="fa fa-arrow-up"></i></a>

    <script>
        // When the user scrolls down 20px from the top of the document, show the button
        window.onscroll = function () { scrollFunction() };

        function scrollFunction() {
            if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                document.querySelector(".back-to-top").style.display = "block";
            } else {
                document.querySelector(".back-to-top").style.display = "none";
            }
        }

        // When the user clicks on the button, scroll to the top of the document
        document.querySelector(".back-to-top").addEventListener("click", function (event) {
            event.preventDefault();
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
        });
    </script>


    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/Templete/lib/wow/wow.min.js"></script>
    <script src="~/Content/Templete/lib/easing/easing.min.js"></script>
    <script src="~/Content/Templete/lib/waypoints/waypoints.min.js"></script>
    <script src="~/Content/Templete/lib/counterup/counterup.min.js"></script>
    <script src="~/Content/Templete/lib/lightbox/js/lightbox.min.js"></script>
    <script src="~/Content/Templete/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/Content/Templete/js/main.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>